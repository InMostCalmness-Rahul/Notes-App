
<div class=".container-fluid container-fluid-custom pb-5 mb-5" style="overflow-x: hidden;">

    <div class="row mb-4">

        <div class="col">

            <nav aria-label="breadcrumb">

                <ol class="breadcrumb">
                    <!-- remove the underline from dashboard -->
                    <li class="breadcrumb-item"><a href="/dashboard" style="text-decoration: none;">Dashboard</a></li>    
                    <!-- <li class="breadcrumb-item-active">Add Note</li> -->
                </ol>

            </nav>

                <div class="col d-flex justify-content-between align-items-center">
                    <h1 class="h3">Add Note</h1>

                </div>
        </div>


<div class="container py-5">
  <div class="card shadow-lg rounded-4 p-5 bg-white border-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold text-dark">üìù Add a New Note</h2>
      <a href="/dashboard" class="btn btn-outline-primary">‚Üê Back to Dashboard</a>

    </div>

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger mb-4"><%= error %></div>
    <% } %>

    <form action="/dashboard/add" method="POST">
      <!-- Title Field -->
      <div class="form-floating mb-4">
        <input
          type="text"
          class="form-control"
          id="title"
          name="title"
          placeholder="Note Title"
          required
          value="<%= typeof formData !== 'undefined' ? formData.title : '' %>"
        />
        <label for="title">Title</label>
      </div>

      <!-- Body Field -->
      <div class="form-floating mb-4">
        <textarea
          class="form-control"
          placeholder="Write your note here..."
          id="body"
          name="body"
          style="height: 250px"
          required
        ><%= typeof formData !== 'undefined' ? formData.body : '' %></textarea>
        <label for="body">Note</label>
      </div>

      <!-- Submit Button -->
      <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-lg">+ Add Note</button>
      </div>
    </form>
  </div>
</div>
