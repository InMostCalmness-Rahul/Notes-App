<div class="container py-5">
  <div class="card shadow-lg rounded-4 p-5 bg-white border-0">
    <!-- Header with Back & Delete -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active"><%= note.title %></li>
          </ol>
          <h2 class="fw-bold text-dark">üóíÔ∏è View Note</h2>
        </nav>
      </div>
      <button
        type="button"
        class="btn btn-danger"
        data-bs-toggle="modal"
        data-bs-target="#deleteModal"
      >
        Delete
      </button>
    </div>

    <!-- Form -->
    <form action="/dashboard/item/<%= noteID %>?_method=PUT" method="POST">
      <div class="form-floating mb-4">
        <input
          type="text"
          class="form-control"
          id="title"
          name="title"
          placeholder="Note Title"
          value="<%= note.title %>"
          required
        />
        <label for="title">Title</label>
      </div>

      <div class="form-floating mb-4">
        <textarea
          class="form-control"
          placeholder="Write your note here..."
          id="body"
          name="body"
          style="height: 250px"
          required
        ><%= note.body %></textarea>
        <label for="body">Note</label>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-lg">Update</button>
      </div>
    </form>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Delete Note</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete the note <strong><%= note.title %></strong>?
      </div>
      <div class="modal-footer">
        <form action="/dashboard/item-delete/<%= noteID %>?_method=DELETE" method="POST">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger">Delete Note</button>
        </form>
      </div>
    </div>
  </div>
</div>
