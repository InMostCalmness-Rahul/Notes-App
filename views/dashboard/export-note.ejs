<!-- EXPORT FEATURE: Individual Note Export View - Displays single note for export/printing -->
<div class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row mb-4">
        <div class="col">
            <h1>Export Note - <%= userName %></h1>
            <p class="text-muted">Individual note export</p>
        </div>
        <div class="col text-end">
            <!-- Navigation and print controls -->
            <a href="/dashboard" class="btn btn-outline-primary me-2">‚Üê Back to Dashboard</a>
            <button onclick="window.print()" class="btn btn-success">Print/Save as PDF</button>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Note Details</h5>
                </div>
                <div class="card-body">
                    <!-- EXPORT FEATURE: Single note display with full content and metadata -->
                    <div class="note-item p-4 border rounded">
                        <!-- Note header with title and last updated date -->
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h2 class="mb-1"><%= note.title %></h2>
                            <small class="text-muted">
                                <%= new Date(note.updatedAt).toLocaleDateString() %>
                            </small>
                        </div>
                        <!-- Note content - displays complete body (not truncated) -->
                        <div class="note-content mb-3">
                            <div class="note-body">
                                <p class="lead"><%= note.body %></p>
                            </div>
                        </div>
                        <!-- Note metadata - creation and update dates in organized layout -->
                        <div class="note-meta">
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <strong>Created:</strong> <%= new Date(note.createdAt).toLocaleDateString() %>
                                    </small>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <strong>Last Updated:</strong> <%= new Date(note.updatedAt).toLocaleDateString() %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

